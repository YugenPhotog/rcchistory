  <script>
    // Initialize Reveal: arrows navigate; mouse wheel does NOT advance slides
    Reveal.initialize({
      controls: true,
      controlsTutorial: false,
      progress: true,
      hash: true,
      slideNumber: 'c/t',
      keyboard: true,
      mouseWheel: false, // wheel should NOT advance slides
      touch: true,
      loop: false,
      transition: 'fade',
      transitionSpeed: 'default',
      width: 1200,
      height: 800,
      margin: 0.08,
      minScale: 0.2,
      maxScale: 2.0,
      autoAnimate: true,
      pdfSeparateFragments: false,
      plugins: [ RevealNotes ]
    });

    // Scroll-inside-slide helper
    function scrollWithinSlide(direction){
      const slide = Reveal.getCurrentSlide();
      const sc = slide ? slide.querySelector('.scroll-content') : null;
      if(!sc) return false;

      const step = 70; // px per key press
      if(direction === 'down') sc.scrollTop += step;
      else sc.scrollTop -= step;

      const atTop = sc.scrollTop <= 0;
      const atBottom = sc.scrollHeight - sc.scrollTop <= sc.clientHeight + 2;

      // true = handled (block deck move)
      if((direction === 'down' && !atBottom) || (direction === 'up' && !atTop)) return true;
      return false;
    }

    // Arrow ‚Üì / ‚Üë scroll first; advance slides only at ends
    Reveal.addKeyBinding({ keyCode: 40, key: 'ArrowDown' }, function(){
      if(scrollWithinSlide('down')) return false;
      Reveal.down();
    });

    Reveal.addKeyBinding({ keyCode: 38, key: 'ArrowUp' }, function(){
      if(scrollWithinSlide('up')) return false;
      Reveal.up();
    });

    // Mouse wheel: only scrolls .scroll-content; never advances slides
    document.addEventListener('wheel', function(e){
      const slide = Reveal.getCurrentSlide();
      const sc = slide ? slide.querySelector('.scroll-content') : null;
      if(!sc) return; // no scroll area; wheel ignored due to mouseWheel:false
      sc.scrollTop += e.deltaY;
      e.preventDefault();
    }, { passive: false });

    // 'S' opens speaker notes
    document.addEventListener('keydown', function(e){
      if(e.key === 's' || e.key === 'S'){
        Reveal.getPlugin('notes').open();
      }
    });
  </script>
